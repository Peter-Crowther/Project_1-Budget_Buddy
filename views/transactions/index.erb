<h1>Transactions</h1>

<table>
  <tr>
    <th>Amount</th>
    <th>Merchant</th>
    <th>Tag</th>
  </tr>
  <tr>
    <% for transaction in @transactions%>
  <td><%= transaction.amount %></td>
  <td><%= transaction.merchant.name%></td>
  <td><%= transaction.tag.name%></td>
</tr>
<% end %>
</table>
<br></br>

<table>

  <tr>
    <th>Total Spend</th>
  </tr>

  <tr>
    <td> <%=@total%> </td>
  </tr>

</table>
